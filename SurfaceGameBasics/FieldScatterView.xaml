<Grid
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    x:Class="SurfaceGameBasics.FieldScatterView"
    xmlns:local="clr-namespace:SurfaceGameBasics"
	>
    <Canvas Width="500" Height="500">
        <Rectangle Width="500" Height="500" Stroke="Green" StrokeThickness="10" x:Name="rect" />
        <Rectangle Width="150" Height="150" Stroke="Red" StrokeThickness="5" Canvas.Left="-69" Canvas.Top="-70" x:Name="rectTarget1"/>
        <Rectangle Width="150" Height="150" Stroke="Red" StrokeThickness="5" Canvas.Left="421" Canvas.Top="-70" x:Name="rectTarget2"/>
        <Rectangle Width="150" Height="150" Stroke="Red" StrokeThickness="5" Canvas.Left="-69" Canvas.Top="420" x:Name="rectTarget3"/>
        <Rectangle Width="150" Height="150" Stroke="Red" StrokeThickness="5" Canvas.Left="421" Canvas.Top="420" x:Name="rectTarget4"/>
    </Canvas>
    <StackPanel Width="200" Height="200">
        <s:SurfaceButton Width="110" Height="50" Content="Tag Position" Click="TagPosition_Click"/>
        <Label x:Name="info"/>
    </StackPanel>


    <s:ScatterView HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <s:ScatterViewItem Width="50" Height="50" Orientation="0.0" x:Name="scatterViewItem1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="ScatterViewItem 1" />
            </Grid>
        </s:ScatterViewItem>

        <s:ScatterViewItem Width="50" Height="50" Orientation="0.0" x:Name="scatterViewItem2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="ScatterViewItem 2" />
            </Grid>
        </s:ScatterViewItem>

    </s:ScatterView>
</Grid>


